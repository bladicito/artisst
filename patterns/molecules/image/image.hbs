<picture class="m-image{{#each modifier}} m-image--{{this}}{{/each}}" data-t-name="Image">
	{{#if srcset}}
		{{#each srcset.renditions}}
			<source{{#if media}} media="(min-width: {{media}}px)"{{/if}} data-srcset="{{x1}}{{#if x2}} 1x, {{x2}} 2x{{/if}}">
		{{/each}}
	{{/if}}
	<img class="m-image__image lazyload" data-sizes="auto" src="{{srcset.fallback.x1}}" srcset="{{srcset.fallback.x2}} 2x" data-src="{{srcset.fallback.x1}}" data-srcset="{{srcset.fallback.x2}} 2x" alt="{{alt}}">
</picture>
